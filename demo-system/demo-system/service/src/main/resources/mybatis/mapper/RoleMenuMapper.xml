<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.manage.system.dao.RoleMenuMapper">

    <select id="queryListByRoleId" resultType="cn.com.manage.modules.model.RoleMenuEntity">
      select * from t_role_menu
      where roleId = #{roleId}
    </select>

    <delete id="deleteByRoleId">
        delete from t_role_menu where roleId = #{roleId}
    </delete>

    <insert id="save" useGeneratedKeys="true">
        insert into t_role_menu
        (roleId, menuId)
        values
        <foreach collection="menuIds" item="menuId" index="index" separator=",">
            (#{roleId}, #{menuId})
        </foreach>
    </insert>

</mapper>